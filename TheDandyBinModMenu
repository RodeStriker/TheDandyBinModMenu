getgenv().SecureMode = true

--Variables

-- Player Variables
local plr = Game.Players.LocalPlayer
local char = plr.Character
local hum = char:WaitForChild("Humanoid")

-- AnyStarterToon Variables
local Toon = "Astro"

local ArrayField = loadstring(game:HttpGet('https://raw.githubusercontent.com/UI-Interface/ArrayField/main/Source.lua'))()

local Window = ArrayField:CreateWindow({
   Name = "The Dandy Bin ModMenu",
   LoadingTitle = "The Dandy Bin Team Presents",
   LoadingSubtitle = "by RodeStriker",
   ConfigurationSaving = {
      Enabled = false,
      FolderName = nil, -- Create a custom folder for your hub/game
      FileName = "TDB ModMenu"
   },
   Discord = {
      Enabled = false,
      Invite = "dandysworldexploits", -- The Discord invite code, do not include discord.gg/. E.g. discord.gg/ABCD would be ABCD
      RememberJoins = true -- Set this to false to make them join the discord every time they load it up
   },
   KeySystem = false, -- Set this to true to use our key system
   KeySettings = {
      Title = "Untitled",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided",
      FileName = "Key", -- It is recommended to use something unique as other scripts using ArrayField may overwrite your key file
      SaveKey = true, -- The user's key will be saved, but if you change the key, they will be unable to use your script
      GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like ArrayField to get the key from
      Actions = {
            [1] = {
                Text = 'Click here to copy the key link <--',
                OnPress = function()
                    print('Pressed')
                end,
                }
            },
      Key = {"Hello"} -- List of keys that will be accepted by the system, can be RAW file links (pastebin, github etc) or simple strings ("hello","key22")
   }
})

local WelcomeTab = Window:CreateTab("Welcome", 4483362458) -- Title, Image
local LobbyTab = Window:CreateTab("Lobby", 4483362458)
local CSTab = Window:CreateTab("Client Sided", 4483362458)
local SSTab = Window:CreateTab("ServerSided", 4483362458)

-- Welcome Tab

-- Lobby Tab
local ASTLabel = LobbyTab:CreateLabel("Any Starter Toon")

local ASTDropdown = LobbyTab:CreateDropdown({
   Name = "Pick a Starter Toon | A-Z",
   Options = {"Astro", "Boxten", "Brightney", "Cosmo", "Finn", "Flutter", "Gigi", "Glisten", "Goob", "Pebble", "Poppy", "Razzle & Dazzle", "Rodger", "Scraps", "Shelly", "Shrimpo", "Sprout", "Teagan", "Tisha", "Toodles","Vee"},
   CurrentOption = {"Astro"},
   MultipleOptions = false,
   Flag = "Dropdown1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
   Callback = function(Option)
      print(Option)
      Toon = Option
   end,
})

local ASTButton = LobbyTab:CreateButton({
   Name = "Redeem Starter Toon",
   Callback = function()
   local args = {
         [1] = Toon
      }

      game:GetService("ReplicatedStorage"):WaitForChild("EarnTutorialTower"):InvokeServer(unpack(args))
      game:GetService("ReplicatedStorage"):WaitForChild("CheckTutorial"):InvokeServer()
      wait(.5)
      hum.Health = 0
   end,
})

local Button = LobbyTab:CreateButton({
   Name = "Redeem Codes | 2200 Ichor",
   Callback = function()
      game:GetService("ReplicatedStorage").Events.CodeEvent:FireServer("SKINTICKET")
      game:GetService("ReplicatedStorage").Events.CodeEvent:FireServer("2HUNDREDMILLION")
      game:GetService("ReplicatedStorage").Events.CodeEvent:FireServer("HUNDREDMILLION")
      game:GetService("ReplicatedStorage").Events.CodeEvent:FireServer("FIFTYMILLION")
      game:GetService("ReplicatedStorage").Events.CodeEvent:FireServer("TENMILLION")
      game:GetService("ReplicatedStorage").Events.CodeEvent:FireServer("ONETHOUSAND")
      game:GetService("ReplicatedStorage").Events.CodeEvent:FireServer("ICHOR")
   end,
})

-- Client Sided Tab
local PSLabel = CSTab:CreateLabel("Player Settings")

local PSslider = CSTab:CreateSlider({
   Name = "Change WalkSpeed",
   Range = {10, 125},
   Increment = 2.5,
   Suffix = "Speed",
   CurrentValue = 15,
   Flag = "Slider1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
   Callback = function(Value)
      while wait(0) do
         hum.WalkSpeed = Value
      end
   end,
})

local DandyButton = CSTab:CreateButton({
   Name = "Give Dandy",
   Callback = function()
      game:GetService("Players").LocalPlayer:Kick("Dandy Has Been Given, Rejoin Game.")
   end,
})
